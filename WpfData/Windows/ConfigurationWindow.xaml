<Window x:Class="WpfData.Windows.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfData.Windows"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Height="500" Width="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" CanHorizontallyScroll="True" Margin="15">
        <WrapPanel Orientation="Horizontal" >
            <TextBlock Margin="10">Adresse IP du routeur :</TextBlock>
            <TextBox Width="100" Margin="10" x:Name="inputLTR"></TextBox>
        </WrapPanel>
    </StackPanel>
</Window>
